{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{ "files": ["*.svelte"], "options": { "parser": "svelte", "bracketSameLine": false } },
		{
			"files": ["examples/*/README.md"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
